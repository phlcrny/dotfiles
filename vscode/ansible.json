        "prefix": "Phil-Playbook",
        "body": [
			"---",
			"- name: \"Playbook Name\"",
			"  hosts: all",
			"  gather_facts: true",
			"  become_user: root",
			"  become: yes",
			"",
			"  tasks:",
			"  - name: \"Task 1 Name\"",
			"  copy:",
			"  src: \"{{playbook_dir}}/file\"",
			"  dest: /path/to/file",
