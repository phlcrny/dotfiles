{
	"PlaybookExample": {
		"prefix": "Phil-Playbook",
		"body": [
			"---",
			"- name: Example Playbook",
			"  hosts: all",
			"  gather_facts: true",
			"  become: yes",
			"",
			"  pre_tasks:",
			"    - name: Set hostname",
			"      lineinfile:",
			"        path: /etc/hostname",
			"        regexp: 'default_hostname'",
			"        line: 'new_hostname'",
			"        state: present",
			"        create: yes",
			"",
			"  roles:",
			"    - role: example-role",
			"      tags: ['example']",
			"      vars:",
			"",
			"  tasks:",
			"    - name: Example apt task",
			"      apt:",
			"        name: unattended-upgrades",
			"        state: present",
			"        update_cache: yes",
			"        cache_valid_time: 3600",
			"      when: ansible_distribution == 'Debian' or ansible_distribution == 'Ubuntu'",
			"      tags:",
			"        - apt",
			"",
			"    - name: Example yum task",
			"      yum:",
			"        name: ansible",
			"        state: present",
			"      when: ansible_distribution == 'CentOS' or ansible_distribution == 'Red Hat Enterprise Linux'",
			"      tags:",
			"        - yum",
			"",
			"    - name: Example copy task",
			"      copy:",
			"        src: hosts",
			"        dest: /etc/ansible/hosts",
			"        owner: root",
			"        group: root",
			"        mode: '0755'",
			"      tags:",
			"        - copy",
			"",
			"    - name: Example template task",
			"      template:",
			"        src: config",
			"        dest: /etc/ansible/ansible.cfg",
			"        owner: root",
			"        group: root",
			"        mode: '0600'",
			"      tags:",
			"        - template",
			"",
			"    - name: Example cron job",
			"      cron:",
			"        name: WeeklyReboot",
			"        job: /sbin/shutdown -r now",
			"        state: present",
			"        minute: '30'",
			"        hour: '1'",
			"        day: '*'",
			"        month: '*'",
			"        weekday: '1'",
			"      tags:",
			"        - cron",
			"",
			"    - name: Example ansible pull with line-folding",
			"      cron:",
			"        name: ansible-pull",
			"        job: >",
			"          ansible-pull playbook.yml -U https://github.com/phlcrny/ansible-setup.git",
			"          -d /etc/ansible-setup/",
			"          -e \"user={{ user }} dotfiles_src={{ dotfiles_src }}\"",
			"          --clean",
			"        state: present",
			"        minute: '*/30'",
			"        hour: '*'",
			"        day: '*'",
			"        month: '*'",
			"      tags:",
			"        - ansible-pull",
			"..."
		],
		"description": "An Ansible playbook skeleton"
	},
	"If-DebianOS": {
		"prefix": "Phil-DebianOS",
		"body": "when: ansible_distribution == 'Debian' or ansible_distribution == 'Ubuntu'",
		"description": "A conditional to restrict a task to Debian/Ubuntu hosts"
	},
	"If-RedHatOS": {
		"prefix": "Phil-RedHatOS",
		"body": "when: ansible_distribution == 'CentOS' or ansible_distribution == 'Red Hat Enterprise Linux'",
		"description": "A conditional to restrict a task to CentOS/Red Hat hosts"
	}
}