{
  "[powershell]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
      100, /* Brevity */
      115, /* 1360 x 768 screen */
      165 /* 1920 x 1080 screen */
    ],
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "files.trimTrailingWhitespace": true
  },
  "[python]": {
    "editor.autoIndent": true,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.rulers": [
      80,
      100
    ]
  },
  // Terminal appearance
  "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "terminal.integrated.fontFamily": "Inconsolata, Monaco, Consolas, 'Courier New', Courier",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  // Editor appearance
  "breadcrumbs.enabled": true,
  "debug.openDebug": "neverOpen",
  "editor.fontSize": 14,
  "editor.fontFamily": "Inconsolata, Monaco, Consolas, 'Courier New', Courier",
  "editor.minimap.showSlider": "always",
  "editor.minimap.side": "left",
  "editor.tokenColorCustomizations": {
    "[Dracula]": {
      "variables": "#ffd09a"
    }
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "scm.alwaysShowProviders": true,
  "window.menuBarVisibility": "default",
  "window.newWindowDimensions": "maximized",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootPath}${separator}${appName}",
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "zenMode.centerLayout": false,
  "zenMode.hideTabs": false,
  // Editor Mappings/Behaviour
  "editor.formatOnType": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "files.associations": {
    "*.psrc": "powershell",
    "*.pssc": "powershell",
    "*.ps1xml": "powershell"
  },
  "files.defaultLanguage": "powershell",
  "telemetry.enableTelemetry": false,
  // Powershell formatting
  "powershell.codeFormatting.preset": "Allman",
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.ignoreOneLineBlock": true,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.openBraceOnSameLine": false,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  // Powershell behaviour
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "powershell.enableProfileLoading": false,
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.startAutomatically": true,
  // Git
  "git.autofetch": true,
  "git.autofetchPeriod": 10,
  "git.fetchOnPull": true,
  "git.openDiffOnClick": false,
  "git.showPushSuccessNotification": true,
  // GitLens
  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.autoRefresh": true,
  "gitlens.views.repositories.location": "scm",
  // BracketPairColorizer
  "bracketPairColorizer.highlightActiveScope": true,
  "bracketPairColorizer.showBracketsInGutter": true,
  "bracketPairColorizer.showBracketsInRuler": true,
  // Rainbow CSV
  "rainbow_csv.csv_lint_detect_trailing_spaces": true,
  "rainbow_csv.enable_context_menu_tail": true,
  // Remote SSH
  "remote.SSH.defaultExtensions": [
    "CoenraadS.bracket-pair-colorizer",
    "oderwat.indent-rainbow",
    "shardulm94.trailing-spaces"
  ],
  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.remotePlatform": {
    "*": "linux"
  }
}