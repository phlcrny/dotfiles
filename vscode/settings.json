{
  "[powershell]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": true,
    "editor.rulers": [
      100, /* Brevity */
      115, /* 1360 x 768 screen */
      165 /* 1920 x 1080 screen */
    ],
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "files.trimTrailingWhitespace": true
  },
  "[python]": {
    "editor.autoIndent": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.rulers": [
      80,
      100
    ],
    "python.analysis.typeCheckingMode": "basic"
  },
  "[terraform]": {
    "editor.autoIndent": true,
    "editor.TabSize": 2
  },
  "[yaml]": {
    "editor.autoIndent": true,
    "editor.TabSize": 2
  },
  // Terminal appearance
  "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font Mono', Inconsolata, Monaco, Consolas, 'Courier New', Courier",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  //
  // Editor appearance
  //
  "editor.bracketPairColorization.enabled": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "'CaskaydiaCove Nerd Font Mono', Inconsolata, Monaco, Consolas, 'Courier New', Courier",
  "editor.guides.bracketPairs": true,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.scrollbar.verticalScrollbarSize": 20,
  "editor.scrollbar.horizontalScrollbarSize": 20,
  "editor.tokenColorCustomizations": {
    "[Dracula]": {
      "variables": "#ffd09a"
    }
  },
  "workbench.colorTheme": "Dracula",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "zenMode.centerLayout": false,
  "zenMode.hideTabs": false,
  //
  // Editor Mappings/Behaviour
  //
  "editor.formatOnType": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "files.associations": {
    "*.psrc": "powershell",
    "*.pssc": "powershell",
    "*.ps1xml": "powershell"
  },
  "scm.alwaysShowActions": true,
  "scm.alwaysShowRepositories": true,
  "scm.defaultViewMode": "tree",
  "scm.providerCountBadge": "visible",
  "telemetry.telemetryLevel": "error",
  "window.title": "${dirty}${separator}${remoteName}${separator}${activeEditorMedium}${separator}${rootPath}${separator}",
  //
  // Powershell formatting
  //
  "powershell.codeFormatting.preset": "Allman",
  "powershell.codeFormatting.addWhitespaceAroundPipe": true,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.ignoreOneLineBlock": true,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.openBraceOnSameLine": false,
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.useConstantStrings": true,
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  "powershell.codeFormatting.whitespaceAroundPipe": false,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,
  //
  // Powershell behaviour
  //
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.promptToUpdatePowerShell": false,
  "powershell.startAutomatically": true,
  //
  // Python behaviour
  //
  "python.analysis.typeCheckingMode": "basic",
  //
  // git
  //
  "git.autofetch": "all",
  "git.autofetchPeriod": 30,
  "git.autoStash": true,
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.scanRepositories": [
    "C:\\Dev",
    "~/Dev"
  ],
  //
  // GitHub
  //
  "github.gitAuthentication": false,
  //
  // GitLens
  //
  "gitlens.codeLens.enabled": false,
  "gitlens.heatmap.toggleMode": "window",
  "gitlens.heatmap.locations": [
    "gutter"
  ],
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.sortBranchesBy": "date:desc",
  "gitlens.views.branches.files.layout": "tree",
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.views.contributors.files.layout": "tree",
  "gitlens.views.remotes.files.layout": "tree",
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.repositories.autoRefresh": true,
  "gitlens.views.searchAndCompare.files.layout": "tree",
  "gitlens.views.stashes.files.layout": "tree",
  "gitlens.views.tags.files.layout": "tree",
  //
  // tabnine
  //
  "tabnine.experimentalAutoImports": true,
  //
  // Error Lens
  //
  "errorLens.delay": 3000,
  "errorLens.addAnnotationTextPrefixes": true,
  "errorLens.messageTemplate": "$message ($severity per $source)",
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.warningColor": "rgba(180,180,0,0.1)"
}