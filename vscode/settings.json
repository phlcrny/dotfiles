{
  "[powershell]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
    "files.trimTrailingWhitespace": true,
  },

  "[python]": {
    "editor.autoIndent": true,
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
  },

  //region Terminal

    // Terminal Appearance
      "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "terminal.integrated.fontFamily": "Consolas, 'Lucida Console'",
      "terminal.integrated.fontSize": 13,
      "terminal.integrated.lineHeight": 1,
      "terminal.integrated.cursorBlinking": true,
      "terminal.integrated.cursorStyle": "line",

  // Editor

    // Editor Appearance
    "breadcrumbs.enabled": true,
    "editor.fontSize": 12,
    "editor.fontFamily": "Consolas, 'Lucida Console', 'Courier New', monospace",
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "left",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    "scm.alwaysShowProviders": true,
    "window.menuBarVisibility": "default",
    "window.newWindowDimensions": "maximized",
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootPath}${separator}${appName}",
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "zenMode.centerLayout": false,
    "zenMode.hideTabs": false,

    // Editor Mappings/Behaviour
    "editor.multiCursorModifier": "ctrlCmd",
    "files.defaultLanguage": "powershell",
    "telemetry.enableTelemetry": false,

// Powershell

  // Formatting
  "powershell.codeFormatting.preset": "Allman",
  "powershell.codeFormatting.openBraceOnSameLine": false,
  "powershell.codeFormatting.newLineAfterOpenBrace": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.codeFormatting.ignoreOneLineBlock": false,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,

  // Behaviour
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "powershell.enableProfileLoading": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.startAutomatically": true,

// Git

  "git.autofetch": true,
  "git.autofetchPeriod": 10,
  "git.showPushSuccessNotification": true,

// GitLens

  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.autoRefresh": true,
  "gitlens.views.repositories.location": "scm",

//BracketPairColorizer

  "bracketPairColorizer.highlightActiveScope": true,
  "bracketPairColorizer.showBracketsInGutter": true,
  "bracketPairColorizer.showBracketsInRuler": true,
}