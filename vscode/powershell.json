    },

    "Example-ShouldProcessFull": {
        "prefix": "Phil-ShouldProcessFull",
        "body": [
            "if (\\$PSCmdlet.ShouldProcess(\"Performing the operation '$(\\$MyInvocation.MyCommand.Name)' on target '\\$Target' for '\\$Source'\",",
            "\t\t\t\t\t\t\t\"Perform the operation '$(\\$MyInvocation.MyCommand.Name)' on target '\\$Target' for '\\$Source'?\",",
            "\t\t\t\t\t\t\t\"Are you sure you want to perform this action?\"))",
            "{",
            "\ttry",
            "\t{",
            "\t\t# Do things.",
            "\t}",
            "\tcatch",
            "\t{",
            "\t\t\\$PSCmdlet.ThrowTerminatingError(\\$_)",
            "\t\tBreak",
            "\t}",
            "}"
        ],
        "description": "Example: a longer three-variable Should Process segment."
    },

    "Example-Pester-HelpTests": {
        "prefix": "Phil-Pester-HelpTests",
        "body": [
            "Describe \"Help tests for \\$FunctionName\" {",
            "",
            "\tContext  \"Help - Structure\" {",
            "",
            "\t\tBeforeAll {",
            "\t\t\t\\$Help = Get-Help -Name \\$FunctionName -Full",
            "\t\t}",
            "",
            "\t\tIt \"Has a Synopsis section.\" {",
            "\t\t\t\\$Help.Synopsis | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "",
            "\t\tIt \"Has a Description section.\" {",
            "\t\t\t\\$Help.Description | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "",
            "\t\tIt \"Has an Example section.\" {",
            "\t\t\t\\$Help.Examples | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "",
            "\t\tIt \"Has an Inputs section.\" {",
            "\t\t\t\\$Help.inputTypes | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "",
            "\t\tIt \"Has an Outputs section.\" {",
            "\t\t\t\\$Help.returnValues | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "",
            "\t\tIt \"Has a Notes section.\" {",
            "\t\t\t\\$Help.alertSet | Should -Not -Be NullOrEmpty",
            "\t\t}",
            "}",
            "",
            "\tContext \"Help - Contents\" {",
            "",
            "\t\tBeforeAll {",
            "\t\t\t\\$Help = Get-Help -Name \\$FunctionName -Full",
            "\t\t}",
            "",
            "\t\tIt \"Has a Synopsis not starting with 'TBC'\" {",
            "\t\t\t\\$Help.Synopsis | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has a Description not starting with 'TBC'\" {",
            "\t\t\t\\$Help.Description | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has an Example not starting with 'TBC'\" {",
            "\t\t\t\\$Help.Examples | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has an Inputs section not starting with 'TBC'\" {",
            "\t\t\t\\$Help.inputTypes | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has an Outputs section not starting with 'TBC'\" {",
            "\t\t\t\\$Help.returnValues | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has a Notes section not starting with 'TBC'\" {",
            "\t\t\t\\$Help.alertSet.alert | Should -Not -Match \"TBC -\"",
            "\t\t}",
            "",
            "\t\tIt \"Has a Notes section containing a valid version string.\" {",
            "\t\t\t\\$Help.alertSet.alert | Should -Match \"Version (\\d{1,})[.](\\d{1,})[.](\\d{1,})\"",
            "\t\t}",
            "\t}",
            "}"
        ],
        "description": "Example: Pester tests for advanced function Help."
    },

    "Example-Pester-UnitTests": {
        "prefix": "Phil-Pester-UnitTests",
        "body": [
            "Describe \"Unit tests for \\$FunctionName\" {",
            "",
            "\tContext \"Input\" {",
            "",
            "\t\tContext \"Non Strict-Mode\" {",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "",
            "\t\tContext \"Strict-Mode Version 5\" {",
            "",
            "\t\t\tBeforeAll {",
            "\t\t\t\tSet-StrictMode -Version 5",
            "\t\t\t}",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "\t}",
            "",
            "\tContext \"Execution\" {",
            "",
            "\t\tContext \"Non Strict-Mode\" {",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "",
            "\t\tContext \"Strict-Mode Version 5\" {",
            "",
            "\t\t\tBeforeAll {",
            "\t\t\t\tSet-StrictMode -Version 5",
            "\t\t\t}",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "\t}",
            "",
            "\tContext \"Output\" {",
            "",
            "\t\tContext \"Non Strict-Mode\" {",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "",
            "\t\tContext \"Strict-Mode Version 5\" {",
            "",
            "\t\t\tBeforeAll {",
            "\t\t\t\tSet-StrictMode -Version 5",
            "\t\t\t}",
            "",
            "\t\t\tIt \"Should -be True\" {",
            "\t\t\t\t\\$False | Should -Be \\$True",
            "\t\t\t}",
            "\t\t}",
            "\t}",
            "}"
        ],
        "description": "Example: Basic structure for Pester unit tests."
    }
}